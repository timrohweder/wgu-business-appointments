<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.EditCustomerController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Schedule Software">
         <font>
            <Font name="Arial Bold" size="30.0" />
         </font>
      </Label>
      <HBox layoutX="476.0" layoutY="14.0" prefHeight="100.0" prefWidth="470.0" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleAppointmentsClick" prefHeight="27.0" prefWidth="126.0" text="Appointments" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleCustomersClick" prefHeight="27.0" prefWidth="126.0" text="Customers" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleCalendarClick" prefHeight="27.0" prefWidth="126.0" text="Calendar" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleReportsClick" prefHeight="27.0" prefWidth="126.0" text="Reports" />
         </children>
      </HBox>
      <Label layoutX="14.0" layoutY="91.0" text="Edit Customer">
         <font>
            <Font name="Arial Bold" size="18.0" />
         </font>
      </Label>
      <HBox layoutX="14.0" layoutY="544.0" prefHeight="100.0" prefWidth="722.0" spacing="10.0" />
      <VBox layoutX="14.0" layoutY="126.0" prefHeight="547.0" prefWidth="300.0">
         <children>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="Name:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTextField" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="Address:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="addressTextField" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="Address 2:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="address2TextField" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="City:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cityComboBox" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="Postal Code:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="postalCodeTextField" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Label text="Phone:">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="phoneTextField" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="481.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleSave" text="Save" />
                  <Button mnemonicParsing="false" onAction="#returnToCustomerScreen" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
